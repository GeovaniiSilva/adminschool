<%= form_for @course, html: {class: "form"} do |f| %>
    <div class="form-group">
        <%= f.label "Título" %>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label "Duração" %>
        <%= f.text_field :duration, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label "Ativo" %>
        <%= f.select :active,[['Escolha', nil], ['Ativo', true], ['Inativo', false]], class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.submit "Salvar", class: "btn btn-primary" %>
        <%= link_to "Voltar", course_path, class: "btn btn-primary" %>
    </div>
<% end %>