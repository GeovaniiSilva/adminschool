<div class="card bg-default">
    <div class="card-header">
        <h3><%= @professor.name %></h3>
    </div>
    <div class="card-body">
        <p><Strong>Nascimento: </Strong><%= date_ptbr(@professor.birth) %></p>
        <p><strong>Sexo: </strong><%= @professor.sex == 'M' ? 'Masculino' : 'Feminino' %></p>
    </div>
    <div class="card-footer">
        <%= link_to "Editar", edit_professor_path, class: "btn btn-info" %>
        <%= link_to "Voltar", professors_path, class: "btn btn-info" %>
        <%= link_to "Deletar", professor_path, method: :delete, data: { confirm: "Deletar?"}, class: "btn btn-danger" %>
    </div>
</div>
