<div class="card bg-default">
    <div class="card-header">
        <h3><%= @discipline.title %></h3>
    </div>
    <div class="card-body">
        <p><Strong>Descrição: </Strong><%= @discipline.description %></p>
        <p><strong>Horas: </strong><%= @discipline.hours %></p>
        <p><Strong>Curso: </Strong><%= @discipline.course.title %></p>
        <p><Strong>Curso: </Strong><%= @discipline.professor.name %></p>
    </div>
    <div class="card-footer">
        <%= link_to "Editar", edit_discipline_path, class: "btn btn-info" %>
        <%= link_to "Voltar", disciplines_path, class: "btn btn-info" %>
        <%= link_to "Deletar", discipline_path, method: :delete, data: { confirm: "Deletar?"}, class: "btn btn-danger" %>
    </div>
</div>
